<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            fwhite: '#F0F2F5',
          },
          fontFamily: {
            poppins: ['Poppins', 'sans-serif'],
          },
        }
      }
    }
  </script>
</head>
<style>
  .blurred-background {
    background: #00000024;
    backdrop-filter: blur(10px);
  }
</style>
<body class="font-poppins bg-fwhite">
  <% if (errorMessage.length > 0) { %>
    <div class="alert alert-danger"><%= errorMessage %></div>
  <% } %>
  <% if (successMessage.length > 0) { %>
    <div class="alert alert-success"><%= successMessage %></div>
  <% } %>
  <main>
    <header class="absolute flex justify-between w-full px-8 top-6">
      <div class="flex items-center space-x-2">
        <img src="/images/logo.png" alt="Company Logo" class="h-10">
        <span class="text-lg font-semibold">Your Logo</span>
      </div>
      <p>
        Have an account? 
        <a href="login" class="text-[#20DC49] hover:underline">Sign in</a>
      </p>
    </header>


    <div class="flex flex-col md:flex-row h-screen">
      <!-- Left Section -->
      <div class="hidden md:block w-1/2 h-full">
        <img src="/images/signupBanner.png" alt="Signup Banner" class="h-full w-full object-cover">
      </div>
      <div class="absolute top-1/4 left-16 hidden md:block">
        <div class="bg-[#20DC49] flex items-center text-sm px-4 py-2 rounded-lg text-white">
          <img src="/images/flash-circle.png" alt="Flash Icon" class="h-5 mr-2">
          <span>Royal Stock Images</span>
        </div>
        <div class="blurred-background p-5 rounded-lg mt-4">
          <img src="/images/microscope.png" alt="Microscope" class="h-12 mx-auto">
          <p class="text-white text-center mt-2">
            Best Stock Photos and Videos from across the internet.
          </p>
        </div>
      </div>

      <!-- Right Section -->
      <div class="flex flex-col justify-center items-center w-full md:w-1/2 px-8">
        <div class="text-center">
          <h1 class="text-3xl font-semibold mb-2">Get Started with Marker</h1>
          <p class="text-sm text-gray-600">Getting started is easy</p>
        </div>

        <form action="signup" method="post" class="flex flex-col mt-8 space-y-5 w-full max-w-md" id="form">
          <label for="firstname" class="sr-only">First Name</label>
          <input 
            type="text" 
            name="firstname" 
            placeholder="First Name" 
            class="p-3 border rounded-lg focus:outline-none focus:ring focus:ring-green-300" 
            id="firstname"
            required
          />

          <label for="lastname" class="sr-only">Last Name</label>
          <input 
            type="text" 
            name="lastname" 
            placeholder="Last Name" 
            class="p-3 border rounded-lg focus:outline-none focus:ring focus:ring-green-300" 
            id="lastname"
            required
          />

          <label for="email" class="sr-only">Email</label>
          <input 
            type="email" 
            name="email" 
            placeholder="Enter Email" 
            class="p-3 border rounded-lg focus:outline-none focus:ring focus:ring-green-300" 
            id="email"
            required
          />

          <div class="relative">
            <label for="password" class="sr-only">Password</label>
            <input 
              type="password" 
              id="password" 
              name="password" 
              placeholder="Password" 
              class="p-3 border rounded-lg w-full focus:outline-none focus:ring focus:ring-green-300"
              required
            />
            <button 
              type="button" 
              onclick="togglePassword('password', this)" 
              class="absolute right-3 top-3"
              aria-label="Toggle Password Visibility"
            >
              <img src="/images/blind 1.png" alt="Toggle Visibility" id="toggleIcon">
            </button>
          </div>

          <label for="passwordConfirm" class="sr-only">Confirm Password</label>
          <input 
            type="password" 
            name="passwordConfirm" 
            placeholder="Confirm Password" 
            class="p-3 border rounded-lg focus:outline-none focus:ring focus:ring-green-300"
            id="password2"
            required
          />
          <p id="error" class="text-red-600 text-sm"></p>

          <button 
            type="submit" 
            class="bg-[#20DC49] py-3 rounded-lg text-white hover:bg-green-600 transition"
          >
            Create Account
          </button>
        </form>
      </div>
    </div>
  </main>

  <script>
    function togglePassword(fieldId, button) {
      const passwordField = document.getElementById(fieldId);
      const isPasswordVisible = passwordField.type === 'text';
      passwordField.type = isPasswordVisible ? 'password' : 'text';

      // Update the icon (optional)
      const icon = button.querySelector('img');
      icon.src = isPasswordVisible ? 'images/blind 1.png' : 'images/eye.png';
    }
  </script>
</body>
</html>

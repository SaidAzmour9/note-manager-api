<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Notes</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">

  <!-- Header -->
  <header class="bg-blue-600 text-white py-4">
    <div class="container mx-auto flex justify-between items-center">
      <h1 class="text-2xl font-bold">All Notes</h1>
      <button onclick="logout()" class="bg-red-500 hover:bg-red-600 px-4 py-2 rounded text-white">
        Logout
      </button>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto mt-8">
    <!-- Notes Section -->
    <section>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% if (notes && notes.length > 0) { %>
          <% notes.forEach(note => { %>
            <!-- Single Note -->
            <div class="bg-white rounded shadow p-4">
              <h2 class="text-lg font-semibold text-blue-600"><%= note.title %></h2>
              <p class="text-gray-700 mt-2">
                <%= note.content.length > 100 ? note.content.slice(0, 100) + '...' : note.content %>
              </p>
              <div class="mt-4 flex justify-between items-center">
                <a href="/notes/<%= note.id %>/edit" class="text-blue-500 hover:underline">Edit</a>
                <form action="/notes/<%= note.id %>/delete" method="POST" class="inline">
                  <button type="submit" class="text-red-500 hover:underline">Delete</button>
                </form>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <!-- No Notes Found -->
          <p class="text-gray-600 text-center col-span-3">No notes found. Start adding your first note!</p>
        <% } %>
      </div>
    </section>

    <!-- Add Note Button -->
    <div class="mt-8 flex justify-center">
      <a href="/notes/addNote" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded shadow">
        + Add Note
      </a>
    </div>
  </main>

  <!-- Footer -->

  <!-- Optional JavaScript -->
  <script>
    function logout() {
      fetch('/auth/logout', {
        method: 'POST',
        credentials: 'include', // Ensure cookies are included in the request
    })
      .then(response => response.json())
      .then(data => {
          console.log(data.message); // Show success message
          window.location.href = '/auth/login'; // Redirect to login page
      })
      .catch(error => console.error('Error:', error));
      }
  </script>

</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Notes</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">

  <!-- Header -->
  <header class="bg-blue-600 text-white py-4">
    <div class="container mx-auto flex justify-between items-center">
      <h1 class="text-2xl font-bold">Add Note</h1>
      <button onclick="logout()" class="bg-red-500 hover:bg-red-600 px-4 py-2 rounded text-white">
        Logout
      </button>
    </div>
  </header>
  <% if (errorMessage.length > 0) { %>
    <div class="text-center text-red alert alert-danger"><%= errorMessage %></div>
<% } %>

<% if (successMessage.length > 0) { %>
    <div class="text-center alert alert-success"><%= successMessage %></div>
<% } %>
    <form action="/notes" method="POST" class="max-w-lg mx-auto">
        <div class="mb-4">
          <label for="categoryId" class="block text-gray-700 font-medium mb-2">Choose a Category:</label>
          <select id="categoryId" name="categoryId" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
            <% category.forEach(cat => { %>
              <option value="<%= cat.id %>"><%= cat.name %></option>
            <% }); %>
          </select>
        </div>
      
        <div class="mb-4">
          <label for="content" class="block text-gray-700 font-medium mb-2">Note Content:</label>
          <textarea id="content" name="content" rows="4" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"></textarea>
        </div>
      
        <div class="mb-4">
          <label for="tags" class="block text-gray-700 font-medium mb-2">Select Tags:</label>
          <% tag.forEach(t => { %>
            <div class="flex items-center">
              <input type="checkbox" id="tag-<%= t.id %>" name="tagIds" value="<%= t.id %>" class="h-4 w-4 text-blue-600 border-gray-300 rounded">
              <label for="tag-<%= t.id %>" class="ml-2 text-gray-700"><%= t.name %></label>
            </div>
          <% }); %>
        </div>
      
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">Add Note</button>
      </form>
      
</body>
</html>